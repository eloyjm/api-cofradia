{
  "python.formatting.provider": "black",
  "isort.args": [
    "--profile",
    "black"
  ],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "black-formatter.args": [
    "--line-length",
    "79"
  ]
}